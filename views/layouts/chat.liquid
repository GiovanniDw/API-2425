<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    {% block head %}
      <title>{{ title }}</title>
    {% endblock %}
    {% if NODE_ENV == "development" %}
      <script type="module" src="{{ CLIENT_URL }}/@vite/client" defer></script>
      <script type="module" src="{{ CLIENT_URL }}/src/main.js" defer></script>
    {% else %}
    
      <link rel="stylesheet" href="/index.css" />
      <script src="/index.js" defer></script>
    {% endif %}
      <link rel="stylesheet"
            href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />


          

    {% block styles %}
    {% endblock %}
    {% block scripts %}
    {% endblock %}
  </head>

  <body>
    <header>
      <div class="header-start">
    {% if room %}
        <a class="back-button" href="/chat">
      <span class="icon">arrow_back_ios</span>back
      </a>
    {% endif %}
      </div>
      <div class="header-center">
        <h1 class="h1">{{ title }}</h1>
      </div>
      <div class="header-end"></div>
    
    </header>
    <main>{% block content %} {% endblock %}</main>
  
{% render 'components/nav.liquid', user: user %}
  </body>

</html>