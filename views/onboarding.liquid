{% layout "layouts/auth.liquid" %}
{% block content %}

{% block scripts %}
{% comment %}
<script type="module" src="http://localhost:5173/src/register.js" defer></script> {% endcomment %}
{% endblock %}

<div class="onboarding-container">
<form action="/register/onboarding" id="onboarding-form" method="POST">
<h1 class="h1">{{ title }}</h1>
<p>Welcome {{ user.name }}!</p>
  Complete Your Profile!
  <div class="form-group">
    <label for="avatar">Avatar</label>
    <input  type="text" id="avatar" name="avatar"
           placeholder="Avatar URL">
  </div>
  <div class="form-group">
    <label for="bio">Bio</label>
    <input  type="text" id="bio" name="bio"
           placeholder="Tell us something about u!">
  </div>
  <button type="submit">Save Profile!</button>
</form>
</div>
{% endblock %}