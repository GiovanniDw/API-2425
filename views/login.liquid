{% layout "layouts/auth.liquid" %} {% block content %}

<form action="/login" method="POST" id="login-form">
  <h1 class="h1">{{ title }}</h1>
  <div class="form-group">
    <label for="username">Email</label>
    <input autocomplete="email" type="email" id="username" name="username"
           placeholder="your@email.com" required value="giovanni@giovanni.nl">
    <div class="error">
      {{ error.username }}
    </div>
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    <input autocomplete="current-password" type="password" id="password" name="password"
           placeholder="Your Password" required value="giovanni">
    <div class="error">
      {{ error.password }}
    </div>
  </div>
  <button class="btn" type="submit" value="Login">Login</button>
  <div>No Account yet? <a href="/register" class="link-inline">Create an account</a></div>
</form>
{% endblock %}