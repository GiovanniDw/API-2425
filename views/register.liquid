{% layout "layouts/base.liquid" %}
{% block content %}

{% block scripts %}
<script type="module" src="http://localhost:5173/src/register.js" defer></script>
{% endblock %}


<h1 class="h1">{{ title }}</h1>
<form action="/register" id="register-form" method="POST">
<div id='register-error'></div>
  <div class="form-group">
    <label for="username">Email</label>
    <input autocomplete="email" type="email" id="username" name="username"
           placeholder="your@email.com" required>
  </div>
  <div class="form-group">
    <label for="name">Name</label>
    <input autocomplete="name" type="text" name="name" id="name" placeholder="name" required>
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    <input autocomplete="new-password" type="password" id="password" name="password"
           placeholder="Your Password" required>
  </div>
  <button type="submit">Register</button>

  <div>Already have an account?
    <a href="/login">Go to login page</a>
  </div>

</form>

{% endblock %}