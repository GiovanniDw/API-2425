{% layout "layouts/base.liquid" %} {% block content %}

<h1 class="h1">{{ title }}</h1>
<form action="/login">
  <div class="form-group">
    <label for="email">Email</label>
    <input autocomplete="email" type="email" id="email" name="email" placeholder="your@email.com"
           required>
  </div>

  <div class="form-group">
    <label for="username">Username</label>
    <input autocomplete="off" type="text" name="username" id="username" placeholder="Username"
           required>
  </div>

  <div class="form-group">
    <label for="password">Password</label>
    <input autocomplete="new-password" type="password" id="password" name="password"
           placeholder="Your Password" required>
  </div>
  <button type="submit">Login</button>

  <div>Already have an account? <a href="/login">Go to login page</a></div>

</form>

{% endblock %}