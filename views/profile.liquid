{% layout "layouts/base.liquid" %} {% block content %}

<h1 class="h1">{{ title }}</h1>
  {% if locals %}
<p>{{locals}}</p>


{% if user %}
  <p>Hi {{ user.name }}</p>
{% endif %}

{% endif %}


<form method="post" action="/logout">
  <button class="nav-item" type="submit">
    <span class="icon">logout</span>
    logout
  </button>
</form>

{% comment %} <ul class="grid">
  {% for item in items %}
  <li>
    <a href="/plant/{{ item.id }}">
      {% render 'components/card/card.liquid', item: item %}
    </a>
  </li>
  {% endfor %}
</ul> {% endcomment %}

{% endblock %}